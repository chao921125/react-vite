{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"lib": ["ES6", "DOM", "DOM.Iterable", "ESNext"],
		"allowJs": false,
		"skipLibCheck": false,
		"esModuleInterop": false,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",
		"experimentalDecorators": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"components/*": ["./src/components/*"]
		},
		"types": ["vite/client", "react/next", "react-dom/next"],
		"noUnusedLocals": true
	},
	"include": [
		"src",
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.js",
		"src/**/*.d.js",
		"types",
		"types/**/*.ts",
		"types/**/*.d.ts",
		"types/**/*.js",
		"types/**/*.d.js",
		"./vite.config.ts"
	],
	"exclude": ["node_modules", "dist", "**/*.js", "tests"],
	"references": [{ "path": "./tsconfig.node.json" }]
}
